<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
  <h1 class="mb-1 restaurant-show-title">
    <input type="text" name="name" value="{{ restaurant.name }}" required="true" size="30">
  </h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto mb-3">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          <input type="text" name="category" value="{{ restaurant.category }}" required="true">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            評價：
          </span>
          <input type="text" name="rating" value="{{ restaurant.rating }}" required="true">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          <input type="text" name="location" value="{{ restaurant.location }}" required="true">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          <input type="text" name="phone" value="{{ restaurant.phone }}" required="true">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            Google Map:
          </span>
          <input type="text" name="google_map" value="{{ restaurant.google_map }}" required="true">
        </p>

        <p class="mb-5 content">
          <span class="text-secondary">
            介紹文：
          </span>
          <textarea class="form-control" aria-label="With textarea" required="true" name="description"
            type="text">{{ restaurant.description }}</textarea>
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
          style="max-width: 600px;">

        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-major btn-lg mx-3">完成</button>
          <a href="/" class="btn btn-secondary btn-lg mx-3">back</a>
        </div>

      </div>
    </div>
  </div>
</form>
<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>


<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto mb-3">

      <form action="/restaurants" method="POST">

        <div class="input-group mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            餐廳名稱：
            <input type="text" name="name" required="true" placeholder="梅子鰻蒲燒專賣店">
          </span>
        </div>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            英文名稱：
            <input type="text" name="name_en" required="true" placeholder="Umeko Japanese Unagi House">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
            <input type="text" name="category" required="true" placeholder="日本料理">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-star fa-xs"></i>
            評價：
            <input type="number" step="0.1" min="0" max="5" name="rating" required="true" placeholder="3.5">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
            <input type="text" name="location" required="true" placeholder="台北市中山區林森北路107巷8號">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
            Google map :
            <input type="url" name="google_map" required="true">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
            <input type="tel" name="phone" required="true" placeholder="02-25212813">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fa-regular fa-image pr-2"></i>
            圖片連結：
            <input type="url" name="image" required="true">
          </span>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <label for="floatingTextarea2">介紹文：</label>
            <textarea class="form-control" name="description" required="true"></textarea>
          </span>
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurant.image }}" alt="{{ restaurant.name }}"
          style="max-width: 600px;">

        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-major btn-lg mx-3">完成</button>
          <a href="/" class="btn btn-secondary btn-lg mx-3">back</a>
        </div>
      </form>
    </div>
  </div>
</div>